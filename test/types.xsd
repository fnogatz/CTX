<?xml version="1.0" encoding="UTF-8" ?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">
    <xs:include schemaLocation="../schema/types.xsd" />

    <xs:element name="simple-time" type="simple-time" />

    <xs:element name="time-controls" type="xs:anyType">
        <xs:alternative test="if (count(@type) eq 1) then (@type eq 'string') else false()" type="time-controls-string" />
        <xs:alternative test="true()" type="time-controls-complex" />
    </xs:element>
</xs:schema>
